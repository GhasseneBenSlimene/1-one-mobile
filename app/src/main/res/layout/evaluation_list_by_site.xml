<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Grand Titre -->

    <!-- Bouton Ajouter -->

    <TextView
        android:id="@+id/title_evaluation_risque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Liste des évaluations par Site"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_gradient_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <Button
        android:id="@+id/button_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Ajouter"
        android:layout_gravity="start"
        android:backgroundTint="#8BC34A"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView pour afficher les données dynamiques -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_evaluation_risque"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
