<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Texte du site -->
    <TextView
        android:id="@+id/text_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du site"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Texte de l'origine -->
    <TextView
        android:id="@+id/text_origine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Origine de l'évaluation"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- Texte du risque -->
    <TextView
        android:id="@+id/text_risque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niveau de risque"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- Texte de description -->
    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de l'évaluation"
        android:textColor="#888888"
        android:textSize="14sp" />
</LinearLayout>
